{% extends '::base.html.twig' %}

{% block title %}
    Govnokod
{% endblock %}

{% block h1 %}
    Govnokod

    <link rel="stylesheet" href="{{ asset('bundles/dcsrating/css/rating.css') }}" />
{% endblock %}


{% block menu %}
    <ul class="menu">
        <li class="first leaf rss"><a href="{{ path('BashBashBundle_rss') }}" title="">rss</a></li>
        <li class="leaf"><a href="{{ path('BashBashBundle_recent', { 'id': 1 }) }}">recent</a></li>
        <li class="leaf"><a href="{{ path('BashBashBundle_best') }}">best</a></li>
        <li class="leaf"><a href="{{ path('BashBashBundle_random') }}">random</a></li>
        <li class="leaf"><a href="{{ path('BashBashBundle_govnokod', { 'id': 1 }) }}"  class="active" >govnokod</a></li>
        <li class="leaf"><a href="{{ path('BashBashBundle_addquote') }}">add quote</a></li>
        <li class="leaf"><a href="{{ path('BashBashBundle_addcode') }}">add code</a></li>
        <li class="leaf"><a href="{{ path('BashBashBundle_myquotes') }}">my quotes</a></li>
        <li class="last leaf"><a href="{{ path('fos_user_security_logout') }}">log out</a>
        </li>
    </ul>
{% endblock %}


{% block content %}



    {% if id > pager.last %}
        <strong>Sorry, there is no such page</strong>

    {% endif %}
    {% if id < 1 %}
        <strong>Sorry, there is no such page</strong>

    {% endif %}
    {% for quote in quotes %}

        <div class="views-row views-row-1 views-row-odd views-row-first">

            <div class="views-field views-field-value">
                <div class="field-content">
                    <div id="rate-node-179-1-5"
                         class="rate-widget-1 rate-widget clear-block rate-average rate-widg…e-9_phLrr7NVXFMouZITX0t-0JxNJMS1Jz_4IckdCuUy4 rate-processed">


                        <a href="{{ path('BashBashBundle_cvote', { 'quote': quote.id, 'value': 1, 'from': 'recent' }) }}"><span id="vote" class="rate-button rate-number-up-down-btn-up">+</span></a>



                        <div class="rate-number-up-down-rating neutral">

                            {{ rate[quote.id] }}

                        </div>
                        <a href="{{ path('BashBashBundle_cvote', { 'quote': quote.id, 'value': -1, 'from': 'recent' }) }}"><span id="vote" class="rate-button rate-number-up-down-btn-up">-</span></a>


                    </div>
                </div>
            </div>
            <div class="views-field views-field-name">
        <span class="field-content">

             <a href="{{ path('BashBashBundle_aquotes', { 'author': quote.author }) }}"> {{ quote.author }}</a>
        </span>
            </div>
            <div class="views-field views-field-nid-1">
                <a class="use-ajax bojan-link-179 bojans-count-0 ajax-processed" title="People bojaned: 0"
                   href="/bash/bojan/179/nojs/set">

                    [:|||:]

                </a>
            </div>
            <div class="views-field views-field-comment-count">
        <span class="views-label views-label-comment-count">
             Comments:
<a href="{{ path('BashBashBundle_codepost', { 'id': quote.id }) }}">
    {{ total[quote.id] }}
</a>
        </span>
        <span class="field-content">
            <a href="/bash/node/179"></a>
        </span>
            </div>
            <div class="views-field views-field-created">
        <span class="field-content">
            {% if   "now"|date('Y-m-d') ==  quote.date|date('Y-m-d') %}
                {{ quote.date|date('Y-m-d H:i') }}
                {#<div id="hot"><strong> hot!</strong></div>#}
            {% else %}
                {{ quote.date|date('Y-m-d H:i') }}
            {% endif %}
        </span>
            </div>
            <div class="views-field views-field-nothing">
        <span class="field-content">
            <a href="{{ path('BashBashBundle_codepost', { 'id': quote.id }) }}">

                #{{ quote.id }}

            </a>
        </span>
            </div>
            <div class="views-field views-field-body">
                <div class="field-content">
                    <p>

                        {{ quote.subject }}

                    </p>
                </div>
            </div>
            <div class="views-field views-field-field-image">
                <div class="field-content">
                    {% if quote.imageName %}
                        <a class="colorbox" href="/task/web/images/products/{{ quote.imageName }}"><img  src="/task/web/images/products/{{ quote.imageName }}" width="220"></a>
                    {% endif %}
                </div>

            </div>

        </div>
    {% endfor %}

    {% block pager %}
        <div class="item-list">

            <ul class="pager">

                {% if id != 1 %}
                    <li class="pager-first first">
                        <a href="{{ path('BashBashBundle_govnokod', { 'id': 1 }) }}">

                            « first

                        </a>
                    </li>

                    <li class="pager-previous">
                        <a href="{{ path('BashBashBundle_govnokod', { 'id': id - 1 }) }}">

                            ‹ previous

                        </a>
                    </li>
                {% endif %}

                {% for pages in pager.arr %}
                    {% if pages == id %}

                        <li class="current">
                            {{ pages }}
                        </li>

                    {% endif %}
                    {% if pages != id %}
                        <li class="pager-item">
                            <a href="{{ path('BashBashBundle_govnokod', { 'id': pages }) }}">

                                {{ pages }}

                            </a>
                        </li>
                    {% endif %}


                {% endfor %}

                {% if id != pager.last %}
                    <li class="pager-next">
                        <a href="{{ path('BashBashBundle_govnokod', { 'id': id + 1 }) }}">

                            next ›

                        </a>
                    </li>
                    <li class="pager-last last">
                        <a href="{{ path('BashBashBundle_govnokod', { 'id': pager.last }) }}">

                            last »

                        </a>
                    </li>

                {% endif %}
            </ul>
        </div>
    {% endblock %}


{% endblock %}


